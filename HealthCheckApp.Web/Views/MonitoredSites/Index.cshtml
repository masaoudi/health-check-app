@model IEnumerable<HealthCheckApp.Web.Models.MonitoredSite>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckIntervalSeconds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsUp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastChecked)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastDownTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckIntervalSeconds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsUp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastChecked)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastDownTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserEmail)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
